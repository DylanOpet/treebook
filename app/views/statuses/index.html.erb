<div class="row">
	<div class="large-12 columns thS">
		<h1 class="statT left">Most Recent Statuses</h1>
		<%= link_to "Post a New Status", new_status_path, class: 'button success buttonSpacing' %>
		<!-- /.statT -->
		<hr class="line1" />
	</div>
	<!-- /.large-12 columns -->
</div>
<!-- /.row -->




<% @statuses.each do |status| %>

<div class="status">
	<h4><%= status.user.full_name %></h4>
	<p><%= status.content %></p>
	
	<div class="meta">
	<%= link_to time_ago_in_words(status.created_at) + " ago", status %>  
	
	<span class="admin">
		| <%= link_to "Edit", edit_status_path(status) %> | 
		<%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to do this bro?!" } %>
	</span>
	
	</div>
</div>
<!-- /.status -->

<% end %>